<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Living Sustainably</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>


  <body>
    <div class="container">
      <div id="top">
        <div>
          <a href="/new"><button class="create-button">Create a Post</button></a>
        </div>
      </div>
      <div id="header">
        <div class="row">
          <div class="col-md-12">
            <img class="logo" src="/assets/ls_logo.png" />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <h1>Living Sustainably</h1>
            <h3>How to live an eco-friendly lifestyle</h3>
          </div>
        </div>

        <div id="nav">
          <div class="nav-links">
            <ul>
              <li>
                <a href="/">All</a>
              </li>
              <li>
                <a href="#">Hydro</a>
              </li>
              <li>
                <a href="#">Geothermal</a>
              </li>
              <li>
                <a href="#">Wind</a>
              </li>
              <li>
                <a href="#">Solar</a>
              </li>
              <li>
                <a href="#">Biomass</a>
              </li>
            </ul>
          </div>
        </div>
        <hr />
      </div>



      <div id="main" class="posts-container">
        <% if(entries.length) { %>
          <% for (var i in entries) { %>
          <div class="post">
            <div class="row">
              <div class="col-md-12">
                <div class="title-arrow-<%= entries[i].category %>"></div>
                <h2><%= entries[i].title %></h2>
                <p class="post-info">Posted on <span class="meta"><%= entries[i].date %></span> by <span class="meta"><%= entries[i].author %></span> in <span class="meta"><%= entries[i].category %></span>.</p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-8">
                <p class="post-teaser">
                  <%= entries[i].body %>
                </p>
              </div>
              <div class="col-md-4">
                <img class="post-thumb" src="<%= entries[i].thumbnail %>" />
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <p class="post-edit">Edit this post</p>
              </div>
            </div>
          </div>
          <% } %>
        <% } else { %>
          <div class="no-posts">
            <h1>Stay tuned...</h1>
            <h3>Great content coming soon!</h3>
          </div>
        <% } %>
      </div>

      <div id="footer">
        <%# footer goes here %>
      </div>
    </div>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
